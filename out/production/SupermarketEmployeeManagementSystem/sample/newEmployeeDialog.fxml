<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane fx:controller="sample.NewEmployeeDialogController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Instruction: Input the information
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Last Name: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Title: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Salary: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="salaryField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Start Date: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="startDateField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Label text="Status: " GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="statusField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
